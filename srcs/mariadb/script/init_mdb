#!/bin/bash

service mysql start

sleep 5

echo "CREATE DATABASE IF NOT EXISTS $WP_DB_NAME;" | mysql -u root                
echo "CREATE USER IF NOT EXISTS '$WP_DB_USER'@'%' IDENTIFIED BY '$WP_DB_PASSWORD';" | mysql -u root
echo "GRANT ALL ON $WP_DB_NAME.* TO '$WP_DB_USER'@'%';" | mysql -u root
echo "FLUSH PRIVILEGES;" | mysql -u root

echo "database is done"

service mysql status
service mysql stop

